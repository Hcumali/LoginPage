<body style="background-image: linear-gradient(to right,#7209f2, #b007bc); height:100% ; width:100%; text-align:center">

    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
